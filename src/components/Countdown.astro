<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8 max-w-4xl mx-auto my-12" id="countdown">
  <div class="glass-panel p-4 rounded-lg text-center">
    <div class="text-4xl md:text-6xl font-black text-white mb-2" id="days">00</div>
    <div class="text-xs md:text-sm uppercase tracking-widest text-gray-400">Days</div>
  </div>
  <div class="glass-panel p-4 rounded-lg text-center">
    <div class="text-4xl md:text-6xl font-black text-brand-primary mb-2" id="hours">00</div>
    <div class="text-xs md:text-sm uppercase tracking-widest text-gray-400">Hours</div>
  </div>
  <div class="glass-panel p-4 rounded-lg text-center">
    <div class="text-4xl md:text-6xl font-black text-brand-secondary mb-2" id="minutes">00</div>
    <div class="text-xs md:text-sm uppercase tracking-widest text-gray-400">Minutes</div>
  </div>
  <div class="glass-panel p-4 rounded-lg text-center">
    <div class="text-4xl md:text-6xl font-black text-white mb-2" id="seconds">00</div>
    <div class="text-xs md:text-sm uppercase tracking-widest text-gray-400">Seconds</div>
  </div>
</div>

<script>
  function updateCountdown() {
    const targetDate = new Date('2026-07-11T08:00:00').getTime();
    const now = new Date().getTime();
    const distance = targetDate - now;

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    const elDays = document.getElementById('days');
    const elHours = document.getElementById('hours');
    const elMinutes = document.getElementById('minutes');
    const elSeconds = document.getElementById('seconds');

    if (elDays) elDays.innerText = String(days).padStart(2, '0');
    if (elHours) elHours.innerText = String(hours).padStart(2, '0');
    if (elMinutes) elMinutes.innerText = String(minutes).padStart(2, '0');
    if (elSeconds) elSeconds.innerText = String(seconds).padStart(2, '0');
  }

  setInterval(updateCountdown, 1000);
  updateCountdown();
</script>
