<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8 animate-fade-in" id="countdown">
  <div class="bg-brand-surface border-l-2 border-brand-primary p-4 lg:p-6 relative overflow-hidden group">
    <div class="absolute top-0 right-0 p-1 opacity-20">
        <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2"/></svg>
    </div>
    <div class="text-4xl lg:text-6xl font-display font-black text-white mb-2 leading-none" id="days">00</div>
    <div class="font-tech text-[10px] uppercase tracking-[0.4em] text-white/40">Days Remaining</div>
  </div>
  
  <div class="bg-brand-surface border-l-2 border-brand-secondary p-4 lg:p-6 relative overflow-hidden group">
    <div class="text-4xl lg:text-6xl font-display font-black text-white mb-2 leading-none" id="hours">00</div>
    <div class="font-tech text-[10px] uppercase tracking-[0.4em] text-white/40">Hours</div>
  </div>

  <div class="bg-brand-surface border-l-2 border-brand-primary p-4 lg:p-6 relative overflow-hidden group">
    <div class="text-4xl lg:text-6xl font-display font-black text-white mb-2 leading-none" id="minutes">00</div>
    <div class="font-tech text-[10px] uppercase tracking-[0.4em] text-white/40">Minutes</div>
  </div>

  <div class="bg-brand-surface border-l-2 border-brand-secondary p-4 lg:p-6 relative overflow-hidden group">
    <div class="text-4xl lg:text-6xl font-display font-black text-brand-primary mb-2 leading-none animate-pulse" id="seconds">00</div>
    <div class="font-tech text-[10px] uppercase tracking-[0.4em] text-white/40">Seconds</div>
  </div>
</div>

<script>
  function updateCountdown() {
    const targetDate = new Date('2026-07-11T08:00:00').getTime();
    const now = new Date().getTime();
    const distance = targetDate - now;

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    const elDays = document.getElementById('days');
    const elHours = document.getElementById('hours');
    const elMinutes = document.getElementById('minutes');
    const elSeconds = document.getElementById('seconds');

    if (elDays) elDays.innerText = String(days).padStart(2, '0');
    if (elHours) elHours.innerText = String(hours).padStart(2, '0');
    if (elMinutes) elMinutes.innerText = String(minutes).padStart(2, '0');
    if (elSeconds) elSeconds.innerText = String(seconds).padStart(2, '0');
  }

  setInterval(updateCountdown, 1000);
  updateCountdown();
</script>
