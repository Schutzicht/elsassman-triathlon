---
import Countdown from './Countdown.astro';
---

<section class="relative h-screen flex items-center justify-center overflow-hidden">
    <!-- Video Background -->
    <video 
        autoplay 
        loop 
        muted 
        playsinline
        class="absolute z-0 w-auto min-w-full min-h-full max-w-none object-cover"
    >
        <source src="https://video.wixstatic.com/video/92dadc_bb2561fd061b4215a66dc08876f4da52/720p/mp4/file.mp4" type="video/mp4" />
        Your browser does not support the video tag.
    </video>

    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/40 z-10 bg-gradient-to-t from-gray-950 via-transparent to-black/30"></div>

    <!-- Content -->
    <div class="relative z-20 text-center px-4 max-w-5xl mx-auto mt-20">
        <h1 class="text-5xl md:text-7xl lg:text-9xl font-bold font-outfit text-white mb-6 tracking-tighter uppercase drop-shadow-xl animate-fade-in-up">
            Swim <span class="text-red-600">Fast</span>.<br/>
            Bike <span class="text-red-600">Strong</span>.<br/>
            Run to <span class="text-red-600">Win</span>.
        </h1>
        <p class="text-lg md:text-2xl text-gray-200 mb-10 font-light tracking-wide max-w-3xl mx-auto animate-fade-in-up delay-200">
            The ultimate triathlon challenge in the heart of Alsace. Defy your limits.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up delay-400">
            <a href="https://en.elsassman.com/inscriptions" target="_blank" class="px-8 py-4 bg-red-600 hover:bg-red-700 text-white font-bold rounded-full uppercase tracking-wider transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(220,38,38,0.5)]">
                Register Now
            </a>
            <a href="#races" class="px-8 py-4 bg-white/10 hover:bg-white/20 backdrop-blur-md text-white border border-white/30 font-bold rounded-full uppercase tracking-wider transition-all">
                Discover Races
            </a>
        </div>
        
        <Countdown />
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-20 animate-bounce">
        <a href="#info" class="text-white/70 hover:text-white">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </a>
    </div>
</section>

<style>
    .animate-fade-in-up {
        animation: fadeInUp 1s ease-out forwards;
        opacity: 0;
        transform: translateY(30px);
    }
    
    .delay-200 { animation-delay: 0.2s; }
    .delay-400 { animation-delay: 0.4s; }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
