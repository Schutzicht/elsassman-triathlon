---
interface Props {
  title: string;
  distance: string;
  swim: string;
  bike: string;
  run: string;
  link: string;
  color?: string;
  delay?: string;
}

const { title, distance, swim, bike, run, link, color = "text-brand-primary", delay = "0" } = Astro.props;
---

<a href={link} class={`group relative block h-[400px] w-full perspective-1000 animate-fade-in-up`} style={`animation-delay: ${delay}ms`}>
  <div class="relative h-full w-full transition-all duration-500 transform-style-3d group-hover:rotate-y-12 group-hover:scale-105">
    <!-- Card Background -->
    <div class="absolute inset-0 bg-brand-surface border border-white/10 p-8 flex flex-col justify-between overflow-hidden group-hover:border-brand-primary/50 transition-colors duration-300">
      
      <!-- Hover Gradient -->
      <div class="absolute inset-0 bg-gradient-to-br from-brand-primary/0 via-transparent to-brand-secondary/0 group-hover:from-brand-primary/10 group-hover:to-brand-secondary/10 transition-all duration-500 opacity-0 group-hover:opacity-100"></div>
      
      <div>
        <h3 class={`text-4xl font-black uppercase mb-2 ${color}`}>{title}</h3>
        <p class="text-white/60 text-lg font-light tracking-wide">{distance}</p>
      </div>

      <div class="space-y-4 relative z-10">
        <div class="flex items-center gap-4">
            <span class="w-8 h-8 rounded-full bg-blue-500/20 flex items-center justify-center text-blue-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 20a2.4 2.4 0 0 0 2 1.2c2.4 0 2.4-1.2 4.8-1.2 2.4 0 2.4 1.2 4.8 1.2 2.4 0 2.4-1.2 4.8-1.2 2.4 0 2.4 1.2 4.8 1.2a2.4 2.4 0 0 0 2-1.2"/></svg>
            </span>
            <span class="font-mono text-lg">{swim}</span>
        </div>
        <div class="flex items-center gap-4">
            <span class="w-8 h-8 rounded-full bg-red-500/20 flex items-center justify-center text-red-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="4"/><line x1="21.17" y1="8" x2="12" y2="8"/><line x1="3.95" y1="6.06" x2="8.54" y2="14"/><line x1="10.88" y1="21.94" x2="15.46" y2="14"/></svg>
            </span>
            <span class="font-mono text-lg">{bike}</span>
        </div>
        <div class="flex items-center gap-4">
            <span class="w-8 h-8 rounded-full bg-green-500/20 flex items-center justify-center text-green-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 15s1-1 4-1 5 2 8 2 4-1 4-1V3s-1 1-4 1-5-2-8-2-4 1-4 1z"/><line x1="4" y1="22" x2="4" y2="15"/></svg>
            </span>
            <span class="font-mono text-lg">{run}</span>
        </div>
      </div>

      <div class="pt-6 border-t border-white/10 mt-6 flex justify-between items-center group-hover:translate-x-2 transition-transform duration-300">
        <span class="font-bold uppercase tracking-wider text-sm">Details</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
      </div>
    </div>
  </div>
</a>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
  .transform-style-3d {
    transform-style: preserve-3d;
  }
  .rotate-y-12 {
    transform: rotateY(10deg);
  }
  
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
