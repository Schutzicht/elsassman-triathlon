---
const { lang = Astro.currentLocale || 'en' } = Astro.props;

const translations = {
    en: {
        tagline: "Push beyond the",
        taglineSpan: "Impossible",
        navTitle: "Navigation",
        infoTitle: "Information",
        ctaTitle: "Ready to race?",
        ctaDesc: "Join 1,000+ athletes in Alsace for the 11th edition.",
        ctaButton: "REGISTER NOW",
        privacy: "Privacy Policy",
        rules: "Rules & Regulations",
        volunteers: "Volunteers",
        races: "Races",
        schedule: "Schedule",
        guide: "Athlete Guide",
        contact: "Contact"
    },
    fr: {
        tagline: "Repousser les limites de",
        taglineSpan: "l'Impossible",
        navTitle: "Navigation",
        infoTitle: "Informations",
        ctaTitle: "Prêt à courir ?",
        ctaDesc: "Rejoignez plus de 1 000 athlètes en Alsace pour la 11ème édition.",
        ctaButton: "S'INSCRIRE MAINTENANT",
        privacy: "Politique de Confidentialité",
        rules: "Règlement",
        volunteers: "Bénévoles",
        races: "Courses",
        schedule: "Programme",
        guide: "Guide de l'Athlète",
        contact: "Contact"
    }
};

const t = translations[lang === 'fr' ? 'fr' : 'en'];
---

<footer class="bg-black text-white py-12 lg:py-20 border-t border-white/5 relative z-10" id="main-footer">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-24">
            <!-- Brand & Tagline -->
            <div class="space-y-8">
                <a href={`/${lang}`} class="block">
                    <img 
                        src="https://static.wixstatic.com/media/92dadc_7f1facba800c400bbf54d63deb452842~mv2.png/v1/crop/x_221,y_893,w_4560,h_1320/fill/w_176,h_53,al_c,q_85,usm_0.66_1.00_0.01,enc_avif,quality_auto/elsassman%20V3_Plan%20de%20travail%2010.png" 
                        alt="Logo" 
                        class="h-10 w-auto"
                    />
                </a>
                <p class="text-2xl font-display font-bold leading-tight uppercase">
                    {t.tagline} <br/> <span class="text-brand-primary">{t.taglineSpan}</span>.
                </p>
                <div class="flex gap-4">
                    <a href="https://facebook.com/elsassman" target="_blank" class="w-10 h-10 border border-white/10 flex items-center justify-center hover:bg-brand-primary hover:border-brand-primary hover:text-white transition-all">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-126c-1.243 0-2.015.752-2.015 1.89V12h2.768v2.891h-2.768v6.987C18.343 21.128 22 16.991 22 12z"/></svg>
                    </a>
                    <a href="https://instagram.com/elsassman" target="_blank" class="w-10 h-10 border border-white/10 flex items-center justify-center hover:bg-brand-primary hover:border-brand-primary hover:text-white transition-all">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.981 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.668-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4.01 4.01 0 110-8.02 4.01 4.01 0 010 8.02zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
                    </a>
                </div>
            </div>

            <!-- Navigation -->
            <div class="space-y-6">
                <h3 class="font-tech text-xs font-black text-white/40 uppercase tracking-widest">{t.navTitle}</h3>
                <nav class="flex flex-col space-y-4">
                    <a href={`/${lang}/#races`} class="text-lg font-bold uppercase hover:text-brand-primary transition-colors">{t.races}</a>
                    <a href={`/${lang}/info/schedule`} class="text-lg font-bold uppercase hover:text-brand-primary transition-colors">{t.schedule}</a>
                    <a href={`/${lang}/info/athlete-guide`} class="text-lg font-bold uppercase hover:text-brand-primary transition-colors">{t.guide}</a>
                    <a href={`/${lang}/contact`} class="text-lg font-bold uppercase hover:text-brand-primary transition-colors">{t.contact}</a>
                </nav>
            </div>

            <!-- Legal/Info -->
            <div class="space-y-6">
                <h3 class="font-tech text-xs font-black text-white/40 uppercase tracking-widest">{t.infoTitle}</h3>
                <nav class="flex flex-col space-y-4">
                    <a href="#" class="text-sm font-bold uppercase hover:text-brand-primary transition-colors">{t.privacy}</a>
                    <a href={`/${lang}/info/rules`} class="text-sm font-bold uppercase hover:text-brand-primary transition-colors">{t.rules}</a>
                    <a href={`/${lang}/benevoles`} class="text-sm font-bold uppercase hover:text-brand-primary transition-colors">{t.volunteers}</a>
                </nav>
            </div>

            <!-- Registration -->
            <div class="space-y-6">
                <div class="bg-brand-surface border border-white/10 p-8 space-y-6 group">
                    <h4 class="text-xl font-bold uppercase">{t.ctaTitle}</h4>
                    <p class="text-xs text-white/60 font-medium leading-relaxed">{t.ctaDesc}</p>
                    <a href={`/${lang}/inscriptions`} class="btn-primary w-full text-center block py-4 text-xs">{t.ctaButton}</a>
                </div>
            </div>
        </div>

        <div class="mt-20 pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6">
            <div class="font-tech text-[10px] text-white/30 font-bold uppercase tracking-widest">
                &copy; 2026 ELSASSMAN TRIATHLON / ALL RIGHTS RESERVED
            </div>
            <a href="https://zee-zicht.nl" target="_blank" class="font-tech text-[10px] text-white/30 hover:text-brand-primary transition-colors font-bold uppercase tracking-widest">
                DESIGNED BY ZEE-ZICHT
            </a>
        </div>
    </div>
</footer>

<script>
    // System stabilized
</script>
