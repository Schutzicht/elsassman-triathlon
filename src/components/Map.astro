    :global(.leaflet-popup-content-wrapper) {
        background-color: #1a1a1a;
        color: white;
        border: 1px solid rgba(255,255,255,0.2);
    }
    :global(.leaflet-popup-tip) {
        background-color: #1a1a1a;
    }
</style>
