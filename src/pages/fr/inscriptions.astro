---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { motion } from 'framer-motion';

const steps = ["Sélection du Challenge", "Biométrie", "Vérification"];
---

<Layout title="INSCRIPTIONS - ELSASSMAN" lang="fr">
    <Navbar lang="fr" />
    
    <main class="pt-48 pb-32 max-w-7xl mx-auto px-6 lg:px-12">
        <div class="mb-24">
            <div class="flex items-center gap-4 mb-8">
                <div class="w-12 h-1 bg-brand-primary"></div>
                <span class="font-tech text-xs font-black uppercase tracking-[0.4em] text-white/40">Inscription</span>
            </div>
            <h1 class="text-6xl md:text-8xl lg:text-9xl font-black uppercase italic leading-[0.8] mb-12 text-white tracking-tighter">
               RÉSERVEZ VOTRE <br/> <span class="text-brand-primary">POSITION</span>
            </h1>
        </div>

        <div class="relative bg-brand-surface border border-white/5 p-12 md:p-20 overflow-hidden group">
            <!-- Decorative light -->
            <div class="absolute -top-48 -right-48 w-96 h-96 bg-brand-primary/5 rounded-full blur-[120px] pointer-events-none"></div>

            <div id="registration-form" class="relative z-10">
                <!-- Multi-step indicator -->
                <div class="flex justify-between mb-24 relative max-w-2xl mx-auto">
                    <div class="absolute top-1/2 left-0 w-full h-[1px] bg-white/5 -translate-y-1/2 z-0"></div>
                    <div id="progress-bar" class="absolute top-1/2 left-0 w-0 h-[1px] bg-brand-primary -translate-y-1/2 z-0 transition-all duration-700"></div>
                    
                    {steps.map((step, i) => (
                        <div class="relative z-10 flex flex-col items-center gap-3">
                            <div class={`step-node w-12 h-12 flex items-center justify-center font-tech font-black text-sm transition-all duration-500 border-2 ${i === 0 ? 'bg-brand-primary text-black border-brand-primary scale-110' : 'bg-black border-white/10 text-white/30'}`} data-step={i} style="clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);">
                                {i + 1}
                            </div>
                            <span class={`text-[10px] uppercase font-black tracking-[0.2em] transition-colors duration-500 ${i === 0 ? 'text-brand-primary' : 'text-white/20'}`}>{step}</span>
                        </div>
                    ))}
                </div>

                <!-- Form Steps -->
                <div id="step-content">
                    <!-- Step 1: Race Selection -->
                    <div class="step-pane space-y-12" data-step="0">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            {[
                                { id: "distance-l", title: "Format L", price: "€185", desc: "Longue Distance / 80k Vélo", tag: "Défi Élite" },
                                { id: "distance-m", title: "Format M", price: "€95", desc: "Olympique / 40k Vélo", tag: "Standard" }
                            ].map(item => (
                                <label class="race-option block p-10 bg-black/40 border border-white/5 cursor-pointer hover:border-brand-primary/40 transition-all relative overflow-hidden group">
                                    <input type="radio" name="race" value={item.id} class="hidden peer">
                                    <div class="absolute inset-0 bg-brand-primary/5 opacity-0 peer-checked:opacity-100 transition-opacity"></div>
                                    <div class="relative z-10">
                                        <div class="flex justify-between items-start mb-6">
                                            <span class="text-3xl font-display font-black uppercase italic text-white group-hover:text-brand-primary transition-colors">{item.title}</span>
                                            <span class="text-2xl font-tech font-black text-brand-primary">{item.price}</span>
                                        </div>
                                        <p class="text-white/30 font-tech text-[10px] uppercase tracking-widest mb-6">{item.desc}</p>
                                        <div class="inline-block px-3 py-1 bg-white/5 border border-white/10 text-[8px] font-black uppercase tracking-[0.3em] text-white/40">{item.tag}</div>
                                    </div>
                                    <div class="absolute bottom-4 right-4 opacity-0 peer-checked:opacity-100 transition-opacity">
                                        <div class="w-6 h-6 bg-brand-primary flex items-center justify-center" style="clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);">
                                            <svg class="w-3 h-3 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="4"><path d="M5 13l4 4L19 7"></path></svg>
                                        </div>
                                    </div>
                                </label>
                            ))}
                        </div>

                        <div class="flex flex-col items-center gap-6 pt-12">
                            <button id="next-to-2" class="btn-primary px-24 py-5 opacity-40 cursor-not-allowed text-xl" disabled>CONTINUER VERS L'INSCRIPTION</button>
                            <span class="font-tech text-[9px] text-white/20 uppercase tracking-[0.4em]">Identité et données biométriques requises ensuite</span>
                        </div>
                    </div>

                    <!-- Step 2: Personal Details -->
                    <div class="step-pane hidden space-y-12" data-step="1">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                            {[
                                { label: "Prénom", placeholder: "JEAN" },
                                { label: "Nom", placeholder: "DUPONT" },
                                { label: "Adresse E-mail", placeholder: "ATHLETE@CHALLENGE.COM" },
                                { label: "Identifiant Téléphone", placeholder: "+33 ..." }
                            ].map(field => (
                                <div class="space-y-4">
                                    <label class="font-tech text-[10px] font-black uppercase text-white/20 tracking-[0.4em]">{field.label}</label>
                                    <input type="text" class="w-full bg-black/60 border border-white/10 px-6 py-5 text-white font-display font-bold uppercase tracking-widest focus:border-brand-primary focus:outline-none transition-all placeholder:text-white/10" placeholder={field.placeholder}>
                                </div>
                            ))}
                        </div>
                        
                        <div class="pt-12 flex flex-col md:flex-row gap-6">
                            <button id="back-to-1" class="btn-secondary flex-1 py-5">RETOUR</button>
                            <button id="next-to-3" class="btn-primary flex-[2] py-5 text-xl">AUTHENTIFIER & FINALISER</button>
                        </div>
                    </div>

                    <!-- Step 3: Success -->
                    <div class="step-pane hidden text-center space-y-12 py-20" data-step="2">
                        <div class="w-32 h-32 bg-brand-primary/10 flex items-center justify-center mx-auto mb-12 border border-brand-primary/20 animate-pulse" style="clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);">
                            <svg class="w-16 h-16 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2"><path d="M5 13l4 4L19 7"></path></svg>
                        </div>
                        <h2 class="text-6xl font-display font-black uppercase italic text-white animate-reveal">DÉFI ACCEPTÉ</h2>
                        <p class="text-xl text-white/40 max-w-md mx-auto font-body uppercase tracking-[0.2em] font-bold">
                            Vos données biométriques ont été enregistrées. Vérifiez votre terminal pour la confirmation.
                        </p>
                        <div class="pt-12">
                            <a href="/fr/" class="btn-secondary px-16 py-4">RETOUR À LA BASE</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script>
    const setupRegistration = () => {
        const nextBtn1 = document.getElementById('next-to-2');
        const nextBtn2 = document.getElementById('next-to-3');
        const backBtn2 = document.getElementById('back-to-1');
        const raceOptions = document.querySelectorAll('input[name="race"]');
        const panes = document.querySelectorAll('.step-pane');
        const nodes = document.querySelectorAll('.step-node');
        const progressBar = document.getElementById('progress-bar');

        function jumpToStep(step) {
            panes.forEach((p, i) => {
                if (i === step) {
                    p.classList.remove('hidden');
                    p.classList.add('animate-reveal');
                } else {
                    p.classList.add('hidden');
                }
            });

            nodes.forEach((n, i) => {
                const label = n.nextElementSibling;
                if (i <= step) {
                    n.classList.remove('bg-black', 'border-white/10', 'text-white/30', 'scale-100');
                    n.classList.add('bg-brand-primary', 'text-black', 'border-brand-primary', 'scale-110');
                    label?.classList.add('text-brand-primary');
                    label?.classList.remove('text-white/20');
                } else {
                    n.classList.add('bg-black', 'border-white/10', 'text-white/30', 'scale-100');
                    n.classList.remove('bg-brand-primary', 'text-black', 'border-brand-primary', 'scale-110');
                    label?.classList.remove('text-brand-primary');
                    label?.classList.add('text-white/20');
                }
            });

            const perc = (step / (panes.length - 1)) * 100;
            if (progressBar) progressBar.style.width = `${perc}%`;
        }

        raceOptions.forEach(opt => {
            opt.addEventListener('change', () => {
                 if (nextBtn1) {
                    nextBtn1.removeAttribute('disabled');
                    nextBtn1.classList.remove('opacity-40', 'cursor-not-allowed');
                    nextBtn1.classList.add('scale-105');
                 }
            });
        });

        nextBtn1?.addEventListener('click', () => jumpToStep(1));
        backBtn2?.addEventListener('click', () => jumpToStep(0));
        nextBtn2?.addEventListener('click', () => jumpToStep(2));
    };

    setupRegistration();
    document.addEventListener('astro:page-load', setupRegistration);
</script>

<style>
    .animate-reveal {
      animation: reveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    @keyframes reveal {
      from { 
          opacity: 0;
          transform: translateY(20px);
      }
      to { 
          opacity: 1;
          transform: translateY(0);
      }
    }
</style>
