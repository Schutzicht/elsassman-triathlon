---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import ParallaxHero from '../components/ParallaxHero.astro';
import Countdown from '../components/Countdown.astro';
import RaceCard from '../components/RaceCard.astro';
import Map from '../components/Map.astro';
---

<Layout title="Elsassman Triathlon - Swim Fast, Bike Strong, Run to Win">
	<Navbar />
	
	<main>
		<ParallaxHero 
			title="11 & 12 July 2026"
			tagline="Challenge yourself on the mythical passes of Grand Ballon and Markstein. The ultimate triathlon experience in Alsace."
			backgroundImage="https://images.unsplash.com/photo-1517649763962-0c623066013b?q=80&w=2670&auto=format&fit=crop"
		/>

		<section class="relative -mt-20 z-30 px-4">
			<Countdown />
		</section>

		<section class="py-24 px-4 container mx-auto" id="races">
			<div class="text-center mb-16">
				<h2 class="text-xs font-bold tracking-[0.2em] text-brand-primary uppercase mb-3">Choose your challenge</h2>
				<h3 class="text-4xl md:text-5xl font-black text-white uppercase">The Races</h3>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
				<RaceCard 
					title="Format L"
					distance="Long Distance"
					swim="1.9km"
					bike="80.3km"
					run="20km"
					link="/races/distance-l"
					delay="100"
				/>
				<RaceCard 
					title="Format M"
					distance="Olympic Distance"
					swim="1.5km"
					bike="39.6km"
					run="10km"
					link="/races/distance-m"
					delay="200"
				/>
				<RaceCard 
					title="Format S"
					distance="Sprint / Discovery"
					swim="750m"
					bike="23.9km"
					run="5.2km"
					link="/races/distance-s"
					delay="300"
				/>
				<RaceCard 
					title="Kids"
					distance="Avenir 1 & 2"
					swim="100/200m"
					bike="VTT"
					run="Run"
					link="/races/kids"
					delay="400"
				/>
			</div>
		</section>

		<section class="py-24 bg-brand-surface relative overflow-hidden">
			<!-- Decorative blobst -->
			<div class="absolute top-0 right-0 w-[500px] h-[500px] bg-brand-primary/5 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2"></div>
			<div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-brand-secondary/5 rounded-full blur-3xl -translate-x-1/2 translate-y-1/2"></div>

			<div class="container mx-auto px-4 relative z-10 flex flex-col lg:flex-row items-center gap-16">
				<div class="lg:w-1/2 space-y-8">
					<h2 class="text-4xl md:text-5xl font-black uppercase text-white leading-tight">
						A Mythical <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-primary to-brand-secondary">Course</span>
					</h2>
					<p class="text-gray-400 text-lg leading-relaxed">
						From the calm waters of Ensisheim to the grueling climbs of the Vosges mountains. The Elsassman is not just a race; it's a journey through the heart of Alsace.
					</p>
					<div class="space-y-4">
						<div class="flex items-start gap-4">
							<div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center text-brand-primary shrink-0">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l5.447 2.724A1 1 0 0121 18.382V7.618a1 1 0 00-.553-.894L16 7m-6-3l6 3"></path></svg>
							</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-1">Split Transition</h4>
								<p class="text-gray-400">Swim in Ensisheim, Finish in Guebwiller. A point-to-point adventure.</p>
							</div>
						</div>
						<div class="flex items-start gap-4">
							<div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center text-brand-secondary shrink-0">
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
							</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-1">Legendary Climbs</h4>
								<p class="text-gray-400">Tackle the Grand Ballon and Markstein passes on the L format.</p>
							</div>
						</div>
					</div>
					<a href="/info/schedule" class="btn-secondary inline-block">View Schedule</a>
				</div>
				<div class="lg:w-1/2 w-full">
					<Map />
				</div>
			</div>
		</section>

		<section class="py-24 px-4 text-center">
			<div class="max-w-3xl mx-auto space-y-8">
				<h2 class="text-4xl md:text-6xl font-black uppercase">Ready to make history?</h2>
				<p class="text-xl text-gray-400">Join hundreds of athletes for the 11th edition of the Elsassman Triathlon.</p>
				<div class="flex justify-center gap-4">
					<a href="/inscriptions" class="btn-primary">Register Now</a>
				</div>
			</div>
		</section>
	</main>

</Layout>
