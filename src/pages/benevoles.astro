---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Volunteers - Elsassman Triathlon">
    <Navbar />
    
    <main class="pt-32 pb-20 container mx-auto px-4">
        <div class="flex flex-col lg:flex-row gap-16">
            <div class="lg:w-1/2">
                <h1 class="text-5xl md:text-7xl font-black uppercase mb-8 text-white">Join the <span class="text-brand-primary">Crew</span></h1>
                <p class="text-xl text-gray-400 mb-8 leading-relaxed">
                    Without you, nothing is possible! We are looking for 350 volunteers to make this weekend unforgettable.
                    Join the Elsassman family and experience the event from the inside.
                </p>

                <div class="bg-white/5 border border-white/10 rounded-xl p-8 mb-8">
                    <h3 class="text-2xl font-bold text-white mb-4">Why Volunteer?</h3>
                    <ul class="space-y-4">
                        <li class="flex items-start gap-4">
                            <span class="w-6 h-6 rounded-full bg-brand-primary/20 text-brand-primary flex items-center justify-center font-bold">✓</span>
                            <span class="text-gray-300">Official Elsassman T-Shirt</span>
                        </li>
                        <li class="flex items-start gap-4">
                            <span class="w-6 h-6 rounded-full bg-brand-primary/20 text-brand-primary flex items-center justify-center font-bold">✓</span>
                            <span class="text-gray-300">Meals and drinks provided</span>
                        </li>
                        <li class="flex items-start gap-4">
                            <span class="w-6 h-6 rounded-full bg-brand-primary/20 text-brand-primary flex items-center justify-center font-bold">✓</span>
                            <span class="text-gray-300">Invitation to the Volunteers Party in September</span>
                        </li>
                    </ul>
                </div>

                <a href="https://vorg.fr/fastguebwiller/elsassman" target="_blank" class="btn-primary inline-block text-center w-full md:w-auto">
                    Sign Up Now
                </a>
            </div>

            <div class="lg:w-1/2 grid grid-cols-1 gap-6">
                <!-- Roles -->
                <div class="group">
                    <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-colors cursor-pointer">
                        <h3 class="text-xl font-bold text-white uppercase mb-2">Swim Team</h3>
                        <p class="text-gray-400 text-sm">Secure the swim course, manage the start, and assist athletes out of the water.</p>
                    </div>
                </div>
                <div class="group">
                    <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-colors cursor-pointer">
                        <h3 class="text-xl font-bold text-white uppercase mb-2">Course Marshals</h3>
                        <p class="text-gray-400 text-sm">Guide athletes on the bike and run courses. Ensure safety and manage traffic.</p>
                    </div>
                </div>
                <div class="group">
                    <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-colors cursor-pointer">
                        <h3 class="text-xl font-bold text-white uppercase mb-2">Aid Stations</h3>
                        <p class="text-gray-400 text-sm">Distribute energy! Hand out water, fruit, and smiles to athletes.</p>
                    </div>
                </div>
                <div class="group">
                    <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:bg-white/10 transition-colors cursor-pointer">
                        <h3 class="text-xl font-bold text-white uppercase mb-2">Transition & Logistics</h3>
                        <p class="text-gray-400 text-sm">Manage the bike park, bib distribution, and site setup/teardown.</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
</Layout>
