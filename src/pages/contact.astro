---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Contact - Elsassman Triathlon">
    <Navbar />
    
    <main class="pt-32 pb-20 container mx-auto px-4">
        <div class="flex flex-col lg:flex-row gap-16">
            <div class="lg:w-1/2">
                <h1 class="text-5xl md:text-7xl font-black uppercase mb-8 text-white">Get in <span class="text-brand-primary">Touch</span></h1>
                <p class="text-xl text-gray-400 mb-12 leading-relaxed">
                    Have a question about the race, registration, or logistics? We are here to help you prepare for your best performance.
                </p>

                <div class="space-y-8">
                    <div>
                        <h3 class="text-sm font-bold uppercase text-gray-500 tracking-widest mb-2">Email</h3>
                        <a href="mailto:inscription@fast-guebwiller.com" class="text-2xl font-bold text-white hover:text-brand-primary transition-colors">inscription@fast-guebwiller.com</a>
                    </div>
                    <div>
                        <h3 class="text-sm font-bold uppercase text-gray-500 tracking-widest mb-2">Organizers</h3>
                        <p class="text-xl font-bold text-white">FAST Guebwiller</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-bold uppercase text-gray-500 tracking-widest mb-2">Locations</h3>
                        <div class="mb-4">
                            <p class="font-bold text-white">Swim Start</p>
                            <p class="text-gray-400">Plan d'eau Ensisheim, 68190 Ensisheim</p>
                        </div>
                        <div>
                            <p class="font-bold text-white">Finish Line</p>
                            <p class="text-gray-400">Stade Throo, Route d'Issenheim, 68500 Guebwiller</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:w-1/2">
                <form class="glass-panel p-8 md:p-10 rounded-2xl space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="name" class="block text-sm font-bold text-gray-400 mb-2 uppercase">Name</label>
                            <input type="text" id="name" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-brand-primary focus:outline-none transition-colors" placeholder="John Doe">
                        </div>
                        <div>
                            <label for="email" class="block text-sm font-bold text-gray-400 mb-2 uppercase">Email</label>
                            <input type="email" id="email" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-brand-primary focus:outline-none transition-colors" placeholder="john@example.com">
                        </div>
                    </div>
                    
                    <div>
                        <label for="subject" class="block text-sm font-bold text-gray-400 mb-2 uppercase">Subject</label>
                        <select id="subject" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-brand-primary focus:outline-none transition-colors">
                            <option>Registration Question</option>
                            <option>Logistics / Course</option>
                            <option>Volunteering</option>
                            <option>Other</option>
                        </select>
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-bold text-gray-400 mb-2 uppercase">Message</label>
                        <textarea id="message" rows="5" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:border-brand-primary focus:outline-none transition-colors" placeholder="How can we help?"></textarea>
                    </div>

                    <button type="submit" class="btn-primary w-full">Send Message</button>
                    <p class="text-xs text-gray-600 text-center mt-4">We usually reply within 24-48 hours.</p>
                </form>
            </div>
        </div>
    </main>
    
</Layout>
