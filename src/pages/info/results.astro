---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

const years = [
    { year: "2024", link: "https://www.sporkrono.fr/events/elsassman-2024/" },
    { year: "2023", link: "https://www.sporkrono.fr/" },
    { year: "2022", link: "https://www.sporkrono.fr/" },
];
---

<Layout title="Results | Elsassman Triathlon">
    <Navbar />
    
    <main class="pt-32 pb-16 min-h-screen bg-gray-950">
        <div class="container mx-auto px-4 max-w-4xl text-center">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-12 font-outfit uppercase tracking-tighter">
                Race <span class="text-red-600">Results</span>
            </h1>

            <div class="grid gap-4 mt-8">
                {years.map(item => (
                    <a href={item.link} target="_blank" class="block bg-gray-900 hover:bg-gray-800 border border-gray-800 p-6 rounded-xl transition-all group flex items-center justify-between">
                        <span class="text-2xl font-bold text-white group-hover:text-red-500 transition-colors">Edition {item.year}</span>
                        <svg class="w-6 h-6 text-gray-500 group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                    </a>
                ))}
            </div>
        </div>
    </main>

    <Footer />
</Layout>
