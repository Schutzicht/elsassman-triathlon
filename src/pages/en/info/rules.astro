---
import Layout from '../../../layouts/Layout.astro';
import Navbar from '../../../components/Navbar.astro';

const ruleSections = [
    {
        title: "Swimming (Natation)",
        rules: [
            "Wetsuit: Mandatory < 16°C, Forbidden > 24.5°C.",
            "Bib: Forbidden in the water.",
            "Cap: You must wear the official swim cap provided (if any).",
            "Nudity: Strictly forbidden in transition area."
        ]
    },
    {
        title: "Cycling (Vélo)",
        rules: [
            "Drafting: Forbidden (7m zone for S/M, 12m for L) - Blue Card Penalty.",
            "Helmet: Mandatory and must be clipped before touching the bike.",
            "Bib: Worn on the back.",
            "Music: Headphones/Earbuds strictly forbidden (Disqualification).",
            "Time Limits: See schedule page for strict cut-off times."
        ]
    },
    {
        title: "Running (Course à pied)",
        rules: [
            "Bib: Worn on the front.",
            "Helmet: Forbidden.",
            "Assistance: No outside assistance allowed."
        ]
    },
    {
        title: "Logistics (M & L Specific)",
        rules: [
            "Split Transition: Swim start at Ensisheim, Finish at Guebwiller (~14km apart).",
            "Bags: Run gear must be dropped at T2 (Guebwiller) or at Bib Pickup depending on instructions.",
            "Shuttle: NO shuttle service provided by organization for athletes."
        ]
    }
];
---

<Layout title="Rules - Elsassman Triathlon">
    <Navbar lang="en" />
    
    <main class="pt-32 pb-20 container mx-auto px-4 max-w-4xl">
        <div class="text-center mb-16">
            <h1 class="text-5xl md:text-7xl font-black uppercase mb-4 text-white">Rulebook</h1>
            <p class="text-xl text-gray-400">Key regulations for a safe and fair race.</p>
        </div>

        <div class="space-y-4">
            {ruleSections.map((section, index) => (
                <div class="bg-white/5 border border-white/10 rounded-xl overflow-hidden group">
                    <details class="w-full">
                        <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-white/5 transition-colors list-none">
                            <h2 class="text-xl font-bold uppercase text-brand-primary">{section.title}</h2>
                            <span class="transform transition-transform group-open:rotate-180">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                            </span>
                        </summary>
                        <div class="p-6 pt-0 text-gray-300 border-t border-white/5">
                            <ul class="space-y-3 mt-4">
                                {section.rules.map(rule => (
                                    <li class="flex items-start gap-3">
                                        <svg class="w-5 h-5 text-red-500 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                        <span>{rule}</span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </details>
                </div>
            ))}
        </div>

        <div class="mt-12 p-8 bg-red-600/10 border border-red-600/30 rounded-xl text-center">
            <h3 class="text-xl font-bold text-red-500 mb-2 uppercase">Official FFTri Regulations</h3>
            <p class="text-gray-300 mb-6">The Elsassman follows the strict rules of the French Triathlon Federation.</p>
            <a href="http://www.fftri.com/reglementation-sportive" target="_blank" class="btn-secondary text-sm">Download Full FFTri Rules</a>
        </div>
    </main>
    
</Layout>

<style>
    details > summary {
        list-style: none;
    }
    details > summary::-webkit-details-marker {
        display: none;
    }
</style>
